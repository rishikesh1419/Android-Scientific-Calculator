<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorPrimaryDark"
        android:gravity="center|end"
        android:hint="0"
        android:maxLength="15"
        android:padding="10dp"
        android:textColor="@color/colorTextonPrimary"
        android:textColorHint="@color/colorTextonSecondary"
        android:textSize="50sp" />
    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:gravity="center|end"
        android:padding="10dp"
        android:textColor="@color/colorTextonPrimary"
        android:textColorHint="@color/colorTextonSecondary"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:background="@color/colorSecondaryLite"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="btnClick_log"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="ln"
            android:onClick="btnClick_ln"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="xⁿ"
            android:onClick="btnClick_exponent"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="√"
            android:onClick="btnClick_root"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="!"
            android:onClick="btnClick_fact"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:gravity="center"
        android:background="@color/colorSecondaryLite"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="sin"
            android:onClick="btnClick_sin"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="cos"
            android:onClick="btnClick_cos"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="tan"
            android:onClick="btnClick_tan"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/colorTextonSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_7"
            android:text="7"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_8"
            android:text="8"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_9"
            android:text="9"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_add"
            android:text="+"
            android:textColor="@color/colorSecondaryLite"
            android:textSize="30sp"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_backspace_black_24dp"
            android:onClick="btnClick_backspace"
            android:background="@drawable/btn_background"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_4"
            android:text="4"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_5"
            android:text="5"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_6"
            android:text="6"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:onClick="btnClick_subtract"
            android:text="-"
            android:textColor="@color/colorSecondaryLite"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/btn_background"
            android:text="C"
            android:onClick="btnClick_C"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="24sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="1"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="2"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="3"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="×"
                    android:textColor="@color/colorSecondaryLite"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="0"
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="."
                    android:textColor="@color/colorTextonPrimary"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/btn_background"
                    android:text="÷"
                    android:textColor="@color/colorSecondaryLite"
                    android:textSize="30sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/btn_background"
                android:text="="
                android:textColor="@color/colorTextonPrimary"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>